{
  "name": "Gmail Extension",
  "version": "0.0.1",
  "manifest_version": 3,
  "description": "Capstone sample description",
  "content_scripts": [
    {
      "js": ["script.js"],
      "matches": ["*://mail.google.com/*"],
      "run_at": "document_end"
    }
  ],
  "permissions": ["activeTab", "storage", "scripting"],
  "action": {
    "default_popup": "index.html",
    "default_title": "Capstone Thing"
  },
  "icons": {
    "128": "logo.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["/logo.png"],
      "matches": ["*://mail.google.com/*"]
    }
  ]
}
